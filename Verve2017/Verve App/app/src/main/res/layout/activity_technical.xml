<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/eventsframe"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/toolbar"
            android:id="@+id/toolbar2"
            ></include>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightgrey"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="thegreymanshow.verve2017.Technical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/codehoax"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#aeea00"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                android:onClick="onClick"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:id="@+id/code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:scaleType="centerCrop"
                    android:src="@drawable/luck1" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/lan"
                android:onClick="onClick"
                android:layout_width="370dp"
                android:layout_height="200dp"
                android:layout_below="@+id/codehoax"
                android:layout_centerHorizontal="true"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#424242"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/snakes" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/robo"
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_below="@+id/lan"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#1976d2"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bamboozled" />
            </android.support.v7.widget.CardView>

        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>